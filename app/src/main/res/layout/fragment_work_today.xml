<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C7DDFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_Blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccC7DDFF"
        android:visibility="invisible"
        android:clickable="true">

        <!--    android:id="@+id/cd_addbtn_item" Anchor-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/cd_addbtn_anchor2"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/cd_anchor"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글작성"
                android:textSize="24sp"
                android:paddingBottom="4dp"
                android:textColor="#FF333333"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"/>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:clickable="true"
                android:padding="16dp"
                app:neumorph_shadowColorDark="#44999999"
                app:neumorph_shadowColorLight="#44FFFFFF"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add" />

            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>


        <!--    android:id="@+id/cd_addbtn_sub" Anchor-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/cd_addbtn_anchor"
            android:layout_above="@id/cd_anchor"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 통계 보기"
                android:textSize="24sp"
                android:textColor="#FF333333"
                android:paddingBottom="4dp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"/>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:clickable="true"
                android:padding="16dp"
                app:neumorph_shadowColorDark="#44999999"
                app:neumorph_shadowColorLight="#44FFFFFF"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add" />

            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>

        <!--    android:id="@+id/cd_addbtn" Anchor-->
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cd_anchor"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:padding="16dp"
            app:neumorph_shadowColorDark="#44999999"
            app:neumorph_shadowColorLight="#44FFFFFF">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add" />

        </soup.neumorphism.NeumorphCardView>


    </RelativeLayout>


    <!--이게 진짜 버튼임-->
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cd_addbtn_item2"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/cd_addbtn"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:padding="16dp"
        app:neumorph_shadowColorDark="#44999999"
        app:neumorph_shadowColorLight="#44FFFFFF"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cd_addbtn_item"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/cd_addbtn"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:padding="16dp"
        app:neumorph_shadowColorDark="#44999999"
        app:neumorph_shadowColorLight="#44FFFFFF"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cd_addbtn_sub2"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@id/cd_addbtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:padding="16dp"
        app:neumorph_shadowColorDark="#44999999"
        app:neumorph_shadowColorLight="#44FFFFFF"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cd_addbtn_sub"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@id/cd_addbtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:padding="16dp"
        app:neumorph_shadowColorDark="#44999999"
        app:neumorph_shadowColorLight="#44FFFFFF"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add" />

    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cd_addbtn2"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:padding="16dp"
        app:neumorph_shadowColorDark="#44999999"
        app:neumorph_shadowColorLight="#44FFFFFF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add" />

    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cd_addbtn"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:padding="16dp"
        app:neumorph_shadowColorDark="#44999999"
        app:neumorph_shadowColorLight="#44FFFFFF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add" />

    </soup.neumorphism.NeumorphCardView>

    <RelativeLayout
        android:id="@+id/rl_workitem_delete_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbC7DDFF"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"/>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:neumorph_shadowColorDark="#77999999"
            app:neumorph_shadowColorLight="#77FFFFFF">

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="160dp"
                android:background="@drawable/mainbg_03"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이템 삭제"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/mainbg_02"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="이 항목을 삭제하시겠습니까?"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/mainbg_02" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tv_workitem_delete_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="취소"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"/>


                    <TextView
                        android:id="@+id/tv_workitem_delete_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="확인"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"/>

                </LinearLayout>


            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>



    </RelativeLayout>

</RelativeLayout>