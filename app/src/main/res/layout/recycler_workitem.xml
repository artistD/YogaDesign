<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:neumorph_shadowColorDark="#77999999"
        app:neumorph_shadowColorLight="#77FFFFFF">

        <LinearLayout
            android:id="@+id/ll_itemcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mainbg_03"
            android:orientation="vertical"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bg_maincontents01"
                    android:layout_marginLeft="8dp"
                    android:paddingTop="8dp"/>

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/civ"
                    android:text="아침인사 드립니다."
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp"
                    android:checked="true"/>

                <LinearLayout
                    android:id="@+id/ln_goal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_below="@id/tv_nickname"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/civ"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="목표"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        app:cardCornerRadius="16dp">

                        <ImageView
                            android:id="@+id/iv_goal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FF9999ff" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="미리알림"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        app:cardCornerRadius="16dp">

                        <ImageView
                            android:id="@+id/iv_preNotification"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FF9999ff" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:text="위치알림"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        app:cardCornerRadius="16dp">

                        <ImageView
                            android:id="@+id/iv_locationNotification"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FF9999ff" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_goal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/civ"
                    android:ellipsize="end"
                    android:maxWidth="240dp"
                    android:maxLines="1"
                    android:text="매일 아침 물마시기!안녕하세연 반갑습니당"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_addexplanation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="매일 아침 물마시기!안녕하세연 반갑습니당"
                    android:layout_below="@id/tv_name"
                    android:layout_toRightOf="@id/civ"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:maxWidth="240dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:visibility="visible"/>






            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/mainbg_02"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp">


                    <TextView
                        android:id="@+id/tv_week_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="#FF999999"/>

                    <TextView
                        android:id="@+id/tv_week_tues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="화"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="#FF999999"/>

                    <TextView
                        android:id="@+id/tv_week_wendnes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="#FF999999"/>

                    <TextView
                        android:id="@+id/tv_week_thurs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="#FF999999"/>

                    <TextView
                        android:id="@+id/tv_week_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="금"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="#FF999999"/>

                    <TextView
                        android:id="@+id/tv_week_satur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="토"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="#FF999999"/>

                    <TextView
                        android:id="@+id/tv_week_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="#FF999999"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_itemSet"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_recycler_fix"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"/>



            </RelativeLayout>





        </LinearLayout>

<!--        클릭하면 완료되는 이벤트-->
        <RelativeLayout
            android:id="@+id/rl_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mainbg_03"
            android:visibility="invisible"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clear!!"
                android:textSize="32sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_switch_off"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aaC7DDFF"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clear!!"
                android:textSize="32sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

        </RelativeLayout>

    </soup.neumorphism.NeumorphCardView>


</RelativeLayout>