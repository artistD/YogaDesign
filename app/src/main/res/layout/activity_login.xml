<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/mainbg_03">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"/>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="144dp"
                android:layout_height="144dp"
                app:neumorph_shadowColorDark="#77999999"
                app:neumorph_shadowColorLight="#77FFFFFF"
                android:layout_below="@id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp">

                <ImageView
                    android:id="@+id/iv_brand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/mainbg_03"/>

            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="64dp"
                android:text="WelCome"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="40sp"
                android:layout_below="@id/tv_welcome"
                android:layout_alignLeft="@id/tv_welcome"
                android:layout_marginTop="12dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.ImageView"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:clickable="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                app:neumorph_shadowColorDark="#77999999"
                app:neumorph_shadowColorLight="#55FFFFFF"
                android:layout_centerInParent="true"
                android:onClick="clickKaKaoLogin">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/kakao_login_large_wide"/>

            </soup.neumorphism.NeumorphCardView>


        </RelativeLayout>

    </LinearLayout>



















</RelativeLayout>