<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7DDFF"
    tools:context=".time.AlarmDataSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancel"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림 추가"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(반복선택, 사운드 선택 필수)"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="16sp"
                android:textColor="#FF9999FF"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp">

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="264dp"
                app:neumorph_shadowColorDark="#77999999"
                app:neumorph_shadowColorLight="#77FFFFFF">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/mainbg_03"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간 선택"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/mainbg_02"
                        android:layout_marginTop="8dp"/>

                    <TimePicker
                        android:layout_width="match_parent"
                        android:layout_height="156dp"
                        android:timePickerMode="spinner"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/mainbg_02"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="지금부터 1시간 뒤에 울림"
                        android:textSize="16sp"
                        android:textColor="#ff9999ff"/>

                </LinearLayout>


            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphCardView
                android:id="@+id/ess"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                app:neumorph_shadowColorDark="#77999999"
                app:neumorph_shadowColorLight="#77FFFFFF"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/mainbg_03">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_weeks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:text="반복 선택"
                            android:textColor="#FF666666"
                            android:textSize="20dp" />


                        <soup.neumorphism.NeumorphImageView
                            android:id="@+id/niv_weeks"
                            style="@style/Widget.Neumorph.ImageView"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:neumorph_shapeAppearance="@style/ShapeAppearance"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_weeks"
                            android:padding="16dp"
                            app:neumorph_shadowColorDark="#77999999"
                            app:neumorph_shadowColorLight="#77FFFFFF"
                            android:visibility="visible"
                            android:clickable="true"/>



                    </RelativeLayout>

                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>



            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                app:neumorph_shadowColorDark="#77999999"
                app:neumorph_shadowColorLight="#77FFFFFF"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/mainbg_03">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:text="사운드"
                            android:textColor="#FF666666"
                            android:textSize="20dp" />


                        <soup.neumorphism.NeumorphImageView
                            style="@style/Widget.Neumorph.ImageView"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:neumorph_shapeAppearance="@style/ShapeAppearance"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_music"
                            android:padding="16dp"
                            app:neumorph_shadowColorDark="#77999999"
                            app:neumorph_shadowColorLight="#77FFFFFF"
                            android:visibility="visible"
                            android:clickable="true"/>



                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/mainbg_02"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_volume_up"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"/>

                        <com.google.android.material.slider.Slider
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:valueFrom="0.0"
                            android:valueTo="100.0"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_play"
                            android:layout_gravity="center"
                            android:layout_marginRight="8dp"/>

                        <soup.neumorphism.NeumorphImageView
                            style="@style/Widget.Neumorph.ImageView"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:neumorph_shapeAppearance="@style/ShapeAppearance"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_vibration"
                            android:padding="16dp"
                            app:neumorph_shadowColorDark="#77999999"
                            app:neumorph_shadowColorLight="#77FFFFFF"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:clickable="true"/>




                    </LinearLayout>



                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                app:neumorph_shadowColorDark="#77999999"
                app:neumorph_shadowColorLight="#77FFFFFF"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/mainbg_03">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:text="다시 울림"
                            android:textColor="#FF666666"
                            android:textSize="20dp" />


                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"/>



                    </RelativeLayout>

                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>


        </LinearLayout>

    </LinearLayout>


<!--    날짜선택 다이얼로그-->
    <RelativeLayout
        android:id="@+id/rl_weeks_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbC7DDFF"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"/>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:neumorph_shadowColorDark="#77999999"
            app:neumorph_shadowColorLight="#77FFFFFF">

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="440dp"
                android:background="@drawable/mainbg_03"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반복 선택"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/mainbg_02"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cd_weeks_dialog_selected_days"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_weeks_dialog_selected_days"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="날짜 선택"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FF666666"
                            android:background="@drawable/mainbg_03"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cd_weeks_dialog_selected_today"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp">

                        <TextView
                            android:id="@+id/tv_weeks_dialog_selected_today"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="오늘하루만"
                            android:textColor="#FF666666"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/mainbg_03"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="월요일"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_weeks_mon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_unchecked"
                                android:layout_alignParentRight="true"
                                android:onClick="clickWeeksChecked"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="화요일"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_weeks_tues"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_unchecked"
                                android:layout_alignParentRight="true"
                                android:onClick="clickWeeksChecked"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="수요일"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_weeks_wendnes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_unchecked"
                                android:layout_alignParentRight="true"
                                android:onClick="clickWeeksChecked"/>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="목요일"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_weeks_thurs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_unchecked"
                                android:layout_alignParentRight="true"
                                android:onClick="clickWeeksChecked"/>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="금요일"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_weeks_fri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_unchecked"
                                android:layout_alignParentRight="true"
                                android:onClick="clickWeeksChecked"/>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="토요일"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_weeks_satur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_unchecked"
                                android:layout_alignParentRight="true"
                                android:onClick="clickWeeksChecked"/>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="일요일"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_weeks_sun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_unchecked"
                                android:layout_alignParentRight="true"
                                android:onClick="clickWeeksChecked"/>


                        </RelativeLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cd_weeks_dialog_days_blur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="#77C7DDFF"
                        android:visibility="visible"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardElevation="0dp"
                        android:clickable="true"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/mainbg_02" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_weeks_dialog_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="확인"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"/>

                </LinearLayout>


            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>



    </RelativeLayout>


<!--    사운드 선택 다이얼로그-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbC7DDFF"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"/>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:neumorph_shadowColorDark="#77999999"
            app:neumorph_shadowColorLight="#77FFFFFF">

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="440dp"
                android:background="@drawable/mainbg_03"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">

            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>

    </RelativeLayout>


</RelativeLayout>